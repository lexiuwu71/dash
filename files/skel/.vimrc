syntax on

set fileformat=unix
set encoding=UTF-8

set tabstop=2
set softtabstop=2
set shiftwidth=2
set autoindent
set smartindent
set smarttab
set expandtab
set nowrap

set number
set relativenumber
set scrolloff=8
set showcmd
set noshowmode
set conceallevel=1
set shortmess+=c
set formatoptions-=cro

set ignorecase
set smartcase
set incsearch
set hlsearch
